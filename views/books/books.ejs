<% include ../partials/header %>
<% include ../partials/nav %>
<% include ../partials/browse-form %>

<div class="container">
	<div class="hero">
		<header>
		<h2 >All Books Available for Swap</h2>
		<!-- <h4 class="category-title">Categories: <span></span></h4> -->
		<% if (currentUser) { %>
			<a class= "btn btn-primary" href="/books/new">Add new book</a>
		<% } %>
		</header>
	</div>

	<div class="row books-wrapper">
		<% books.forEach(function(book) { %>
			<div class="col-md-3 book-container">
				<a href="books/<%= book._id %>">
					<div class="book-thumbnail">
						<img class= "img-fluid" src="<%= book.thumbnail %>" alt="">
					</div><!--book-thumbnail-->
				</a>

				<div class="book-info">
					<h4 class="book-title">
						<a href="books/<%= book._id %>"><%= book.title %></a>
					</h4>
					<p class="book-author">
						by <%= book.author %>
					</p>
					<div class="summary">
						<p class="book-summary">
							<%= book.summary %>
						</p>
						<a href="books/<%= book._id %>">more details</a>
					</div>
				</div><!--book-info-->
			</div><!--book-container-->
		<% }) %>
	</div>
</div><!--container-->

<div class="browse-result">

</div>

<% include ../partials/footer %>
