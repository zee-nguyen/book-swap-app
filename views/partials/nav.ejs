<header>
	<nav class="navbar navbar-inverse bg-inverse">
		<a class="navbar-brand" href="/">BookSwap</a>
		<ul class="navbar-nav">
			<li class="nav-item">
				<a class="nav-link" href="/books">All Books</a>
			</li>
			<% if (!currentUser) { %>
				<li class="nav-item">
					<a class="nav-link" href="/login">Login</a>
				</li>
				<li class="nav-item">
					<a class="nav-link" href="/register">Sign Up</a>
				</li>
			<% } else { %>
				<li class="nav-item">
					<a class="nav-link" href="/user/<%= currentUser.username %>">Sign in as <%= currentUser.username %></a>
				</li>
				<li class="nav-item">
					<a class="nav-link" href="/logout">Logout</a>
				</li>
			<% } %>
		</ul>
	</nav>
</header>
