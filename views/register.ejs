<% include ./partials/header %>

<div class="container validation-message">
	<% if (success) { %>
		<div class="alert alert-success" role="alert">
			Successful
		</div>
		<% } %>
			<% if (errors) { %>
				<div class="alert alert-danger" role="alert">
					<% errors.forEach(error => { %>
						<li><%= error.msg %></li>
					<% }) %>
				</div>
				<% } %>
</div>


<div class="container form-wrapper user-form-wrapper">
	<div class="row">
		<div class="col-md-12">
			<div class="form">
				<h3 class="text-center">Create an Account</h3>
				<form action="/register" method="post">
					<div class="form-group">
						<label for="fullname">
							Full Name
						</label>
						<input class="form-control" type="text" name="fullname" id="fullname">
					</div><!--fullname-->

						<label for="username">
							Username
							<span class="text-secondary">(only letters and numbers)</span>
						</label>
						<input class="form-control" type="text" name="username" id="username">
					</div><!--username-->

					<div class="form-group">
						<label for="password">
							Password
							<span class="text-secondary">(min. 6 characters)</span>
						</label>
						<input class="form-control" type="password" name="password" id="password">
					</div><!--password-->

					<div class="form-group">
	          <button class="btn btn-large btn-primary btn-block">Sign Up</button>
	        </div>
				</form>
		</div>
	</div><!-- row -->
</div><!-- container -->


		<!-- Custom JS -->
		<script type="text/javascript" src="/js/main.js">
		</script>
	</body>
</html>
